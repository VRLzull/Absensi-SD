{
  "name": "absensi-face-recognition",
  "version": "1.0.0",
  "description": "Sistem Absensi dengan Face Recognition",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm run dev",
    "build:client": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server.js",
    "setup": "npm run install-all && echo Setup completed!",
    "test-api": "curl -s http://localhost:5000/api/health || echo Server not running"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "face-api.js": "^0.22.2",
    "file-saver": "^2.0.5",
    "helmet": "^7.2.0",
    "html2canvas": "^1.4.1",
    "jimp": "^0.22.10",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.3",
    "node-fetch": "^3.3.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "absensi",
    "face-recognition",
    "express",
    "react"
  ],
