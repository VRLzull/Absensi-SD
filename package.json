{
  "name": "absensi-face-recognition",
  "version": "1.0.0",
  "description": "Sistem Absensi dengan Face Recognition",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm run dev",
    "build:client": "cd client && npm run build",
    "start": "node server.js",
    "build": "npm run build:client"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "face-api.js": "^0.22.2",
    "file-saver": "^2.0.5",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.2.0",
    "nodemon": "^2.0.22"
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}
